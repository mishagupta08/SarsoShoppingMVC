
@model SarsoShoppingData.Invoice


    <div class="col-sm-12" style="font-size: 12px; font-family: Arial,Helvetica Neue,Helvetica,sans-serif;">
        <div class="row">
            <div class="col-sm-6">
                SARSO BIZNET INTERNATIONAL PVT. LTD.<br>
                NADANA ROAD, TARAORI<br>
                KARNAL - 132116<br>
                TIN: 06312236362<br>
            </div>
            <div class="col-sm-2 pull-right"><img src="WebSite/images/logo.png" alt="" /></div>
            <div class="col-sm-2"><strong>PERFORMA INVOICE</strong></div>
        </div>
    </div>
    <div class="col-sm-12" style="border:1px solid #000;border-left:none; border-right:none; margin-top:25px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12">CUSTOMER ID:@Model.Receipt.Idno</div>
                    <div class="col-sm-12">PO NO.: @Model.Receipt.ReqNo</div>
                    <div class="col-sm-12">PO DATE: @Model.Receipt.Reqdate</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 form-group" style="border:1px solid #000;border-left:none; border-right:none;">
        <div class="row">
            <div class="col-sm-6">
                <div class="row">

                    <p style="font-weight: bold; font-size: 14px;">Correspondence Address</p>
                    <div class="col-sm-12">@Model.Receipt.Name</div>
                    <div class="col-sm-12">@Model.Receipt.Add1 &nbsp; @Model.Receipt.Add2</div>
                    <div class="col-sm-12">@Model.Receipt.City</div>
                    <div class="col-sm-12">@Model.Receipt.District</div>
                    <div class="col-sm-12">@Model.Receipt.State - @Model.Receipt.Pin</div>
                    <div class="col-sm-12">T: @Model.Receipt.Mobile</div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <p style="font-weight: bold; font-size: 14px;">Shipping Address</p>
                    <div class="col-sm-12">@Model.Receipt.Shoppingaddress.Fname &nbsp; @Model.Receipt.Shoppingaddress.LName</div>
                    <div class="col-sm-12">@Model.Receipt.Shoppingaddress.Address</div>
                    <div class="col-sm-12">@Model.Receipt.Shoppingaddress.City</div>
                    <div class="col-sm-12">@Model.Receipt.Shoppingaddress.District</div>
                    <div class="col-sm-12">@Model.Receipt.Shoppingaddress.state - @Model.Receipt.Shoppingaddress.PiCode</div>
                    <div class="col-sm-12">T: @Model.Receipt.Shoppingaddress.Mobile</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="row form-group">
            <div class="print-d table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>PRODUCTS</th>
                            <th>Attribute</th>
                            <th>CV</th>
                            <th>PRICE</th>                            
                            @if (Model.Receipt.CGSTP)
                            {
                            <td class="col-sm-2">CGST Tax Amt </td>}
                            @if (Model.Receipt.SGSTP)
                            {
                            <td class="col-sm-2" >SGST Tax Amt </td>}
                            @if (Model.Receipt.IGSTP)
                            {
                            <td class="col-sm-2" >IGST Tax Amt</td>}
                            <th>QTY</th>
                            <th>TOTAL</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prd in Model.Receipt.Repurchasesales.Sales)
                        {
                            <tr class="row-data">
                                <td class="col-sm-3">@prd.Pname <br /> ProductCode : @prd.Pcode <br />ItemCode:@prd.Itemcode</td>
                                <td class="col-sm-3">@prd.Attribute</td>
                                <td class="col-sm-1">@prd.Pv </td>
                                <td class="col-sm-2">@prd.Price </td>
                                @if (Model.Receipt.CGSTPV)
                                {
                                <td class="col-sm-2">Rs. @prd.CGST </td>}
                                @if (Model.Receipt.SGSTPV)
                                {
                                <td class="col-sm-2" >Rs. @prd.SGST </td>}
                                @if (Model.Receipt.IGSTPV)
                                {
                                <td class="col-sm-2" >Rs. @prd.IGST </td>}
                                <td class="col-sm-1">@prd.Qty</td>
                                <td class="col-sm-2">@prd.Amount </td>
                            </tr>
                        }                        

                        <tr>
                            <td colspan="7"></td>
                        </tr>
                    </tbody>
                </table>

                @if (Model.Receipt.InvProducts!= null && Model.Receipt.InvProducts.Sales.Count() > 0)
                {
                <table class="table" >
                    <tbody>
                        <tr>
                            <td colspan="6">
                                OFFER PRODUCTS
                            </td>
                        </tr>
                        @foreach (var prd in Model.Receipt.InvProducts.Sales)
                        {
                            <tr class="row-data">
                                <td class="col-sm-3">@prd.Pname <br /> ProductCode : @prd.Pcode <br />ItemCode:@prd.Itemcode</td>
                                <td class="col-sm-3">@prd.Attribute</td>
                                <td class="col-sm-1">@prd.Pv </td>
                                <td class="col-sm-2">@prd.Price </td>
                                @if (Model.Receipt.CGSTPV)
                                {<td class="col-sm-2">Rs. @prd.CGST </td>}
                                @if (Model.Receipt.SGSTPV)
                                {<td class="col-sm-2" >Rs. @prd.SGST </td>}
                                @if (Model.Receipt.IGSTPV)
                                {<td class="col-sm-2" >Rs. @prd.IGST </td>}
                                <td class="col-sm-1">@prd.Qty</td>
                                <td class="col-sm-2">@prd.Amount </td>
                            </tr>
                        }     
                        <tr>
                            <td colspan="6"></td>
                        </tr>
                    </tbody>
                </table>
                }

            </div>
        </div>
    </div>
    <div class="col-sm-12" style="font-size:12px; font-weight:bold;">
        <div class="row">
            <div class="col-sm-12 pull-right">
                <div class="row">
                    <div class="col-sm-6 text-left"><span class="col-sm-3 label-left">Total Qty: </span><span class="col-sm-9 ">@Model.Receipt.Qty</span></div>
                    <div class="col-sm-6 text-right"><span class="col-sm-10">SUBTOTAL: </span><span class="col-sm-2 text-right" style="padding: 0px;"><i class="fa fa-inr"></i> @Model.Receipt.Amount </span></div>
                       @if (Model.Receipt.CouponValue != "0")
                       {
                        <div class="col-sm-6 text-right"><span class="col-sm-10">Discount Coupon: </span><span class="col-sm-2 text-right" style="padding: 0px;"><i class="fa fa-inr"></i> @Model.Receipt.CouponValue </span></div>
                       }
                       else
                       {
                        <div class="col-sm-6 text-right"></div>
                       }

                        @if (Model.Receipt.Credit != "0")
                        {
                        <div class="col-sm-6 text-right"><span class="col-sm-10">Product Credit: </span><span class="col-sm-2 text-right" style="padding: 0px;"><i class="fa fa-inr"></i> @Model.Receipt.Credit</span></div>
                        }
                        else
                        {
                            <div class="col-sm-6 text-right"></div>
                        }
                    <div class="col-sm-6 ttext-left"></div>
                    <div class="col-sm-6 text-right form-group"><span class="col-sm-10">CGST & SGST Tax Amount: </span><span class="col-sm-2 text-right" style="padding: 0px;"><i class="fa fa-inr"></i> @Model.Receipt.Taxamt</span></div>
                    <div class="col-sm-6 ttext-left"></div>
                    <div class="col-sm-6 text-right form-group"><span class="col-sm-10">Shipping Charges: </span><span class="col-sm-2 text-right" style="padding: 0px;"><i class="fa fa-inr"></i> 0</span></div>
                    <div class="col-sm-6 text-left"><span class="col-sm-3 label-left">Total CV: </span><span class="col-sm-9 ">@Model.Receipt.Pv</span></div>
                    <div class="col-sm-6 text-right"><span class="col-sm-10">GRAND TOTAL: </span><span class="col-sm-2 text-right" style="padding: 0px;"><i class="fa fa-inr"></i> @Model.Receipt.NetAmt</span></div>
                </div>
            </div>
        </div>
    </div>

    <p style="font-weight: bold; font-size: 14px; text-align: center; margin-top:10px; padding:5px;">
        E & O E. This is computer generated Purchase Order & does not required signature.
    </p>

