@model SarsoShoppingData.MemberProfile
@{
    ViewBag.Title = "Login";
}

<div class="container-fluid container-fluid0">
    <div class="tp-banner-container hidden-dot ver3">
        <div class="tp-banner">
            <ul>
                <li data-transition="fade" data-slotamount="7" data-masterspeed="1000">
                    <!-- MAIN IMAGE -->
                    <img src="~/assets/images/pagebanner/category-banner.jpg" alt="Category Banner" data-bgfit="cover" data-bgposition="left top" data-bgrepeat="no-repeat">
                    <!-- LAYER NR. 9 -->

                    <div class="tp-caption color-white weight-300 letter-spacing-3 skewfromleft customout size-30"
                         data-x="780"
                         data-y="200"
                         data-customout="x:0;y:0;z:0;rotationX:0;rotationY:0;rotationZ:0;scaleX:0;scaleY:0.75;skewX:0;skewY:0;opacity:0;transformPerspective:600;transformOrigin:50% 50%;"
                         data-speed="800"
                         data-start="1600"
                         data-easing="Power4.easeOut"
                         data-endspeed="300"
                         data-endeasing="Power1.easeIn"
                         data-captionhidden="on"
                         style="z-index: 4">Welcome, Please Sign In!</div>
                </li>
            </ul>
        </div>
    </div>
    <!-- End container -->
</div>
<!-- End Banner Grid -->
<div class="main-content">

    <div class="container container-ver2 space-padding-tb-30">
    </div>
    <!-- End container -->
    <div class="cart-box-container check-out">
        <div class="container container-ver2">
            <div class="row">

                <div class="col-md-6 space-30 space-padding-tb-30 pad40">
                    <div class="slider-one-item ver-2 bestoffer">
                        <div class="item-inner">
                            <div class="product">
                                <div class="product-images">
                                    <a href="#" title="product-images"> <img class="primary_image" src="~/assets/offers/01.jpg" alt="" /> </a>


                                </div>

                            </div>

                        </div>

                        <div class="item-inner">
                            <div class="product">
                                <div class="product-images">
                                    <a href="#" title="product-images"> <img class="primary_image" src="~/assets/offers/02.jpg" alt="" /> </a>


                                </div>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <form class="form-horizontal" id="LoginForm" name="LoginForm" onsubmit="return false;">

                        <h3 class="title-brand">RETURNING CUSTOMER</h3>

                        <div class="form-group">
                            <label for="inputfname" class="control-label">USERNAME <span class="color">*</span></label>
                            @Html.TextBoxFor(m => m.Regid, new { @placeholder = "Enter Registration Id...", @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            <label for="inputlname" class="control-label">PASSWORD <span class="color">*</span></label>
                            @Html.TextBoxFor(m => m.Password, new { @placeholder = "Enter Password...", @class = "form-control", @required = "required" })
                        </div>
                        <div class="form-group">
                            <span style="color:red;" id="LoginError"></span>                            
                        </div>
                        <input type="submit" id="LoginSubmit" class="link-v1 box lh-50 rt full" value="SIGN IN" />
                        <div class="margin-top-10 text-left" style="border-bottom:1px solid #ccc; padding-bottom:20px;">
                            <p>  <a href="#"><span style="color:#373737;">FORGOT PASSWORD?</span></a></p>
                        </div>
                        <div class="margin-top-30 space-10 text-left">
                            <p>  You know a SARSO Business Owner &amp; have their Distributor ID.</p>
                        </div>
                        <a class="link-v1 box lh-50 rt full" href="~/Account/Registration" title="REGISTER">CREATE ACCOUNT</a>
                        <div class="margin-top-30 space-10 text-left">
                            <p>  You don’t know a SARSO Business Owner.</p>
                        </div>
                        <a class="link-v1 box lh-50 rt full" href="#" title="CLICK HERE">CLICK HERE</a>



                    </form>
                </div>


            </div>
            <!-- End row -->
        </div>
        <!-- End container -->
    </div>
    <!-- End cat-box-container -->
</div>
<!-- end product sidebar -->

<div class="container brand-logos space-30 space-padding-tb-100">
    @{Html.RenderPartial("~/Views/Shared/_BrandLogo.cshtml");   }
</div>

<script src="~/Scripts/Register.js?v=1"></script>
