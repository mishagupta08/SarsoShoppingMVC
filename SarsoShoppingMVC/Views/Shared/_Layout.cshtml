    <script type="text/javascript">
        $(document).on('ready', function () {
            if (isUndefinedOrNull(window.sessionStorage.getItem("SCUniqid")) == '') {
                window.sessionStorage.setItem("SCUniqid", Uniqid());
            }

            getCartCount();
            
           $('.slider-for').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            asNavFor: '.slider-nav'
          });
          $('.slider-nav').slick({
            slidesToShow: 4,
            slidesToScroll: 1,
            asNavFor: '.slider-for',
            dots: false,
            focusOnSelect: true
          });
          $('.zoom').zoom();


          $("#LoginFormPopUp").on("submit", function () {

              $("#LoginSubmitPopUp").attr("disabled", true);       
              $("#LoginErrorPopUp").html("");
              var formdata = new FormData($("#LoginFormPopUp")[0]);
              $.ajax({
                  url: '/Account/Login',
                  type: 'POST',
                  dataType: 'json',
                  async: false,
                  processData: false,
                  contentType: false,
                  data: formdata,
                  success: function (objResponse) {
                      $("#LoginSubmitPopUp").attr("disabled", false);
                      if (objResponse != null && objResponse.Message == "success") {
                          if (isUndefinedOrNull(window.sessionStorage.getItem("ScRegid")) == '') {
                              window.sessionStorage.setItem("ScRegid", objResponse.Regid);
                          }
                          window.location.reload();
                      }
                      else {
                          $("#LoginErrorPopUp").html(objResponse.Message);
                      }
                  },
                  error: function (xhr, data) {
                      console.log(xhr);
                      console.log("Error:", data);
                  }
              });
              return false;
          });        

        });

        function getCartCount() {
            var UniqId = window.sessionStorage.getItem("SCUniqid");

            $.ajax({
                url: '/Shop/getCartCount',
                type: 'GET',
                async: false,
                data: { UniqId: UniqId }
            }).done(function (count) {
                $("#cartCount").html(count);
            }).fail(function (error) {
                alert(error.statusText);
                $(".preloader").hide();
            });
            return false;
        }
    </script>

